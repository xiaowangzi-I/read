<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_titleLogout"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:text="@string/menu_titleLogout"
        android:textSize="25sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/tv_menu_background"
        app:layout_constraintTop_toBottomOf="@+id/bt_backMenu"
        android:layout_marginTop="50dp"/>

    <android.widget.Button
        android:id="@+id/bt_backMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_arrow_back_24" />


    <Button
        android:id="@+id/bt_logout"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/tv_titleLogout"
        app:layout_constraintBottom_toBottomOf="@+id/tv_titleLogout"
        app:layout_constraintStart_toStartOf="@+id/tv_titleLogout"
        app:layout_constraintEnd_toEndOf="@+id/tv_titleLogout" />



</androidx.constraintlayout.widget.ConstraintLayout>